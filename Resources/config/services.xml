<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="ridesoft_my_sql_connection.MySqlConnection.class">ridesoft\MySqlConnectionBundle\common\MySqlConnection</parameter>
    </parameters>

    <services>
        <service id="ridesoft_my_sql_connection.MySqlConnection" class="%ridesoft_my_sql_connection.MySqlConnection.class%">
            <argument>%host%</argument>
            <argument>%username%</argument>
            <argument>%password%</argument>
            <argument>%dbname%</argument>  
        </service>
    </services>
    
</container>
